<!-- 넌 필수로 들어가 카테고리 명 불러오기-->
<select id="selectcategory" parameterType="registerVO" resultType="String">
		select category_name from Category	
		<if test='chk_info=="professor"'>
			where category_code=1 or category_code=4
		</if>
		
		
	</select>
	
	
	<select id = "deptname"  resultType="departmentVO">
		select * from department
	</select>
	
	<select id= "subjname" resultType="subjectVO">
		select * from subject
	</select>
	
	
	
	<!-- 너로 교수 학과명 출력 만들고 -->
	<select id= "professordeptname" parameterType="String" resultType="DepartmentVO">
		select dept_name from department 
   			 where dept_no=(
				select dept_no from professor where prof_name=#{prof_name})
	</select> 	
	
	<!-- 너로 관리자 출력 만든다. -->
	<select id="admincustompage" resultType="DepartmentVO">
		select dept_name from department
	</select>
	
	<!--(교수) 게시판 생성 검색조건 -->
	<select id="proselectoption" parameterType="String" resultType="map">
		select dept_name,type,subj_name,prof_name 
			from customboardview where prof_no=#{prof_no}
	</select>
	
	
